<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/viewPeresent"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:background="@drawable/border"
        android:gravity="center"
        android:text="66%"
        android:textColor="@color/light_blue_A200"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=":"
        android:textColor="@color/light_blue_A200"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/viewPeresent"
        app:layout_constraintStart_toStartOf="@+id/viewPeresent"
        app:layout_constraintTop_toBottomOf="@+id/viewPeresent" />

    <TextView
        android:id="@+id/persentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="We are happy to help you"
        app:layout_constraintBottom_toBottomOf="@+id/viewPeresent"
        app:layout_constraintStart_toEndOf="@+id/viewPeresent"
        app:layout_constraintTop_toTopOf="@+id/viewPeresent" />
</androidx.constraintlayout.widget.ConstraintLayout>