<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_glide"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:src="@drawable/googleg_disabled_color_18"
        app:civ_border_color="#E4F6F8"
        app:civ_border_width="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/persentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="We are happy to help you"
        app:layout_constraintBottom_toBottomOf="@+id/iv_glide"
        app:layout_constraintStart_toEndOf="@+id/iv_glide"
        app:layout_constraintTop_toTopOf="@+id/iv_glide" />
</androidx.constraintlayout.widget.ConstraintLayout>